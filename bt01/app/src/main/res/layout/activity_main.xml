<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- CircleImageView hiển thị ảnh -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/anh"
        app:civ_border_width="2dp"
        app:civ_border_color="@android:color/holo_blue_bright"/>

    <!-- Hiển thị tên sinh viên -->
    <TextView
        android:id="@+id/student_name"
        android:text="Tô Thành Hậu"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Hiển thị mã số sinh viên -->
    <TextView
        android:id="@+id/student_id"
        android:text="MSSV: 22110319"
        android:textSize="18sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>